<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingTop="@dimen/activity_vertical_margin" android:padding="16dp"
    tools:context=".Menu">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Robot Specs"
            android:id="@+id/specsTitle"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prematchContainer">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prematch"
                android:id="@+id/prematchText"
                android:textAppearance="@android:style/TextAppearance.Large"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="Match #"
                android:id="@+id/matchNum"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:id="@+id/editMatchNum"
                android:textAppearance="@android:style/TextAppearance.Medium"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:text="Team #"
                android:id="@+id/teamNumber"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:id="@+id/editTeamNumber"
                android:textAppearance="@android:style/TextAppearance.Medium"
                />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:layout_marginRight="5dp"
                        android:id="@+id/textView6" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/defense_array"
                        android:prompt="@string/defense_prompt"
                        android:id="@+id/Ddown1" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:id="@+id/button" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:layout_marginRight="5dp"
                        android:id="@+id/textView9" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/defense_array"
                        android:prompt="@string/defense_prompt"
                        android:id="@+id/Ddown2" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:id="@+id/button2" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:layout_marginRight="5dp"
                        android:id="@+id/textView5" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/defense_array"
                        android:prompt="@string/defense_prompt"
                        android:id="@+id/Ddown3" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:layout_marginRight="5dp"
                        android:id="@+id/textView7" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/defense_array"
                        android:prompt="@string/defense_prompt"
                        android:id="@+id/Ddown4" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:paddingLeft="5dp"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:layout_marginRight="5dp"
                        android:id="@+id/textView4" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/defense_array"
                        android:prompt="@string/defense_prompt"
                        android:id="@+id/Ddown5" />

                </TableRow>
            </TableLayout>

        </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView14" />
        </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prematchContainer"
        android:id="@+id/autonomousContainer">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autonomous"
                android:id="@+id/autoText"
                android:textAppearance="@android:style/TextAppearance.Large"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Goal?"
                android:id="@+id/highGoalText"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editHighGoal"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_column="1" />


        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low Goal?"
                android:id="@+id/lowGoalText"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/lowGoalToggle"
                android:textOff="Nada"
                android:textOn="Yeee"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autonomousContainer"
        android:id="@+id/teleopContainer">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teleop"
                android:id="@+id/teleopText"
                android:textSize="30dp"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breach"
                android:id="@+id/breachText"
                android:textSize="20dp"/>

            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/layoutA"
                    android:layout_toRightOf="@id/breachText">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Defense A"
                        android:id="@+id/aCheck" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Defense B"
                        android:id="@+id/bCheck"
                        android:layout_marginLeft="10dp"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Defense C"
                        android:id="@+id/cCheck"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:id="@+id/textView" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/layoutA">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Defense D"
                    android:id="@+id/dCheck" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Defense E"
                    android:id="@+id/eCheck"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drivetrain"
                android:id="@+id/drivetrainText"
                android:textSize="20dp"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yehh"
                android:id="@+id/switch1"
                tools:targetApi="ice_cream_sandwich"
                android:textOff="Slow"
                android:textOn="Fast"/>

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teleopContainer">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Game"
                android:textSize="30dp"
                android:id="@+id/textView2" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hang"
                android:id="@+id/hangText"
                android:textSize="20dp"/>

            <EditText
                android:layout_height="wrap_content"
                android:id="@+id/editHang"
                android:layout_width="200dp"
                android:layout_marginLeft="10dp"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Points"
                android:id="@+id/totalPointsText"
                android:textSize="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTotalPoints"
                android:layout_marginLeft="10dp"/>
        </TableRow>
    </TableLayout>

        <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:gravity="center"
        android:id="@+id/submitButton" />
    </LinearLayout>
    </ScrollView>

</RelativeLayout>