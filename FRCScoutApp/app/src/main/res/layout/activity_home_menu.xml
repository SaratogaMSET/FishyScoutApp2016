<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="#000000"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Menu">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.19"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="Home (of the MSET Fish)"
        android:id="@+id/menuTitle"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#9DE099"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".27"
        android:text="Input"
        android:id="@+id/inputButton"
        android:layout_marginTop="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:background="#5099BF"
        android:layout_below="@+id/menuTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.27"
        android:text="Viewer"
        android:id="@+id/viewerButton"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#A7A5C6"
        android:textColor="#000000"
        android:layout_below="@+id/inputButton"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="0dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.27"
        android:text="Match"
        android:id="@+id/matchButton"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:background="#39BFAB"
        android:layout_below="@+id/viewerButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
